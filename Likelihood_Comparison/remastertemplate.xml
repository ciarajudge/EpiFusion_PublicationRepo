
<beast version="2.0" namespace="beast.base.inference.parameter:beast.base.inference:remaster">
    <run spec="Simulator" nSims="1">
        <simulate spec="SimulatedTree" id="tree">
            <trajectory spec="StochasticTrajectory" id="trajectory" endsWhen="sample==100" mustHave="sample&gt;75">
                <population spec="RealParameter" id="X" value="1"/>
                <samplePopulation spec="RealParameter" id="sample" value="0"/>

                <reaction spec="Reaction" rate="0.25"> X -> 2X </reaction>
                <reaction spec="Reaction" rate="0.143"> X -> 0 </reaction>
                <reaction spec="Reaction" rate="0.02"> X -> sample </reaction>

            </trajectory>
        </simulate>

        <logger spec="Logger" fileName="$(filebase).traj">
            <log idref="trajectory"/>
        </logger>

        <logger spec="Logger" mode="tree" fileName="$(filebase).trees">
            <log spec="TypedTreeLogger" tree="@tree" removeSingletonNodes = "true"/>
        </logger>
    </run>
</beast>
